extends ../layout/index
block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina
    
    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-5
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre")  Tu Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email")  Email de Registro
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password")  Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password")  Repetir Password
            input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir Password" type="password" name="repetir_password")
          div.flex.items-center.justify-between
            div.flex
              p(class="text-gray-500 pr-2") ¿Ya tienes cuenta? 
              a(href="/auth/login", class="text-xs cursor-pointer pt-1 transition ease-in-out delay-150 text-gray-500 hover:-translate-y-1 hover:scale-110 hover:text-indigo-500 duration-300") Inicia Sesión
            a(href="/auth/olvide-password", class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:text-indigo-500 duration-300") Olvide mi Password
          input(class="w-full bg-indigo-600 transition-all hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-lg", type="submit", value="Crear cuenta!")